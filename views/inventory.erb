<table class = "table">
    <tr>
        <th>Album Name</th>
        <th>Artist</th>
        <th>Stock Level</th>
        <th>Artist</th>
        <th>Album</th>
        <th>View Record</th>
    </tr>

<% @albums.each do |album| %>
    <tr>
        <td><%= album.name() %></td>
        <td><%= album.artist.name() %></td>
        <td><%= album.stock_level %></td>
        <td><form action="/recordstore/artists/delete/<%=album.artist.id%>" method="POST">
            <input type="submit" value="Delete Artist" class = "btn">
            </form>
        </td>
        <td><form action="/recordstore/albums/delete/<%=album.id%>" method="POST">
            <input type="submit" value="Delete Album" class = "btn">
            </form>
        </td>
        <td><form action="/recordstore/album/update/<%=album.id%>" method="GET">
            <input type="submit" value="View Record" class = "btn">
            </form>
        <% end %>
    </tr>
</table>
<br>
<form action="/recordstore/albums" method="GET">
    <input type="submit" value="View Finances" class = "btn">
</form>
