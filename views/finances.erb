<br/>
<table class = "table">
    <tr>
        <th>Album Name</th>
        <th>Artist</th>
        <th>Quantity</th>
        <th>Buy price (per item)</th>
        <th>Selling price</th>
        <th>Amount sold</th>
        <th>Margin</th>
        <th></th>
    </tr>

<% @albums.each do |album| %>

    <tr>
        <td><%= album.name() %></td>
        <td><%= album.artist.name()%></td>
        <td><%= album.quantity() %></td>
        <td><%= album.total_buying_price() %></td>
        <td><%= album.sell_price %></td>
        <td><%= album.sold() %></td>
        <td><%= album.margin() %></td>
        <td><form action="/recordstore/album/update/<%= album.id %>" method="GET">
        <input type="submit" value="Update" class = "btn"> </form> </td>
  </tr>
 <% end %>
</table>
